@Test(expected=GameOverException)
moveTest5() {

// joueur en position (0,0)
// part à gauche
// expected : lance une exception (mauvaise colonne)

}

moveTest6() {

// joueur en position (0,0)
// descend
// expected : nouvelle position (1,0)

}

moveTest7() {

// joueur en position (0,0)
// part à droite
// expected : nouvelle position (0,1)

}

== Test Joueur en position (4,4) ==

moveTest8() {

// joueur en position (4,4)
// monte
// expected : nouvelle position (3,4)

}

moveTest9() {

// joueur en position (4,4)
// part à gauche
// expected : nouvelle position (4,3)

}

@Test(expected=GameOverException)
moveTest10() {

// joueur en position (4,4)
// descend
// expected : lance une exception (mauvaise ligne)

}

@Test(expected=GameOverException)
moveTest11() {

// joueur en position (4,4)
// part à droite
// expected : lance une exception (mauvaise colonne)

}

== Test Joueur 4 en position initiale ==

moveTest0() {

// joueur 4 en position initiale (4,-1)
// descend
// expected : lance une exception (mauvaise colonne)

}

@Test(expected=GameOverException)
moveTest1() {

// joueur 4 en position initiale (4,-1)
// monte
// expected : lance une exception (mauvaise colonne et mauvaise ligne)

}

@Test(expected=GameOverException)
moveTest2() {

// joueur 4 en position initiale (4,-1)
// part à gauche
// expected : lance une exception (mauvaise colonne)

}

@Test(expected=GameOverException)
moveTest3() {

// joueur 4 en position initiale (4,-1)
// part à droite
// expected : nouvelle position (4,0)

}











